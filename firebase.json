{
  "hosting": {
    "public": "site",
    "ignore": [
      "firebase.json",
      "Dockerfile",
      "**/.*",
      "**/node_modules/**",
      "**/*.test.*"
    ],
    "rewrites": [
      {
        "source": "/configsync{,/**}",
        "function": "configsync"
      },
      {
        "source": "/resourcegroup{,/**}",
        "function": "resourcegroup"
      },
      {
        "regex": "^[/\\w\\.-]+[^\\.]..$",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "firebase/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
