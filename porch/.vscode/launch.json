    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/apiserver/cmd/porch/main.go",
            "args": [
                "--secure-port=9443",
                "--v=7",
                "--standalone-debug-mode",
                "--kubeconfig=hack/local/kubeconfig",
                "--cache-directory=${workspaceFolder}/.cache"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}